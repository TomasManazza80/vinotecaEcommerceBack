#!/usr/bin/env node

/**
 * Module dependencies.
 */

// âœ… SI usas ES Modules en todo el proyecto, debes importar app asÃ­:
import app from "../app.js"; // <-- IMPORT (NO require)
import debug from "debug";
import http from "http";
import { Server } from "socket.io"; // âœ… Importar Socket.io
import { inicializarWhatsApp } from "../main.js"; // âœ… Importar funciÃ³n de WhatsApp

// âœ… Sequelize debe importarse por defecto (ESM)
import { Sequelize } from "../models/index.js";

/**
 * Get port from environment and store in Express.
 */

// Usamos el puerto de Render (PORT) o "3000" localmente
const port = normalizePort(process.env.PORT || "3000");
app.set("port", port);

/**
 * Create HTTP server.
 */

const server = http.createServer(app);

/**
 * Create Socket.io server.
 */
const io = new Server(server, {
  cors: {
    origin: "*",
    methods: ["GET", "POST"]
  },
  transports: ['websocket', 'polling']
});

/**
 * INICIALIZACIÃ“N DE WHATSAPP
 * Lo movemos fuera de Sequelize.sync para que arranque de inmediato.
 */
console.log("-------------------------------------------");
console.log("ðŸš€ [System] Iniciando servicio de WhatsApp...");
inicializarWhatsApp(io);

/**
 * Listen on provided port, on all network interfaces.
 * Espera a que sequelize sincronice.
 */

Sequelize.sync()
  .then(() => {
    console.log("ðŸŸ¢ [Database] Base de datos sincronizada.");

    server.listen(port);
    server.on("error", onError);
    server.on("listening", onListening);
  })
  .catch((error) => {
    // âŒ IMPORTANTE: Mostrar el error de conexiÃ³n para debugging en Render
    console.error("âŒâŒâŒ [Database] Error al sincronizar la base de datos:", error);

    // Si la DB falla, por lo menos inicia el servidor para que Render detecte el puerto
    // y puedas debuggear.
    console.log("âš ï¸ [Database] Fallo en la DB, pero intentando iniciar el servidor en el puerto: " + port);

    // Intentamos iniciar el servidor de todas formas, pero es probable que Render crashee
    // si el error es grave y no se maneja bien el process.exit.
    server.listen(port);
    server.on("error", onError);
    server.on("listening", onListening);

    // Si el error persiste, la causa es 100% la conexiÃ³n a la base de datos (variables de entorno o permisos).
    // Puedes comentar las lÃ­neas server.listen(port) si no quieres que la app intente iniciar
    // despuÃ©s de un fallo crÃ­tico de DB.
  });

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== "listen") {
    throw error;
  }

  const bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case "EACCES":
      console.error(`${bind} requires elevated privileges`);
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(`${bind} is already in use`);
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  const addr = server.address();
  const bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
  debug("backend:server")(`Listening on ${bind}`);
  console.log(`ðŸ“¡ [Server] Servidor escuchando en ${bind}`); // Log adicional para confirmar en Render
  console.log("-------------------------------------------");
}